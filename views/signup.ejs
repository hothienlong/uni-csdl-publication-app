<!DOCTYPE html>
<html lang="en">

<head>
    <title>Sign up</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Outline&display=swap" rel="stylesheet">
    <style>
        #reviewer:checked~.form-group {
            display: block !important;
        }
        
        .wrap {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            
        }
        
        .logup-form {
            min-width: 350px;
        }
        
        .form-group {
            position: relative;
            margin-top: 30px;
        }
        
        .form-group label {
            position: absolute;
            margin-left: 15px;
            top: 50%;
            transform: translateY(-50%);
            opacity: 0.5;
            color: dimgray;
            transition: all 200ms ease-in-out;
        }
        
        .form-group input:valid+label,
        .form-group input:focus+label {
            color: black;
            opacity: 1;
            top: -15px;
            font-size: 17px;
        }
    </style>
</head>

<body>
    <div class="wrap">
        <div class="logup-form">
            <h3 class="text-center" style="margin-bottom: 1em;font-family: 'Poppins-Bold', cursive;font-size: 50px;">
                SIGN UP</h3>
            <div>
                <form action="/user/signup" method="POST" novalidate>
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="name" name="fname" required />

                                    <label for="name">Name</label>
                                </div>
                                <% if(typeof alert !='undefined' ) { %>
                                    <% for (var i=0; i < alert.length; i++) { %>
                                        <% if (alert[i].param=='name' ) { %>
                                            <p style="color: red; margin-bottom: 15px;">
                                                <%= alert[i].msg %>
                                            </p>
                                            <% } %>
                                                <% } %>
                                                    <% } %>
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" id="username" name="username" required />
                                                            <label for="username">Username</label>
                                                        </div>
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='username' ) { %>
                                                                    <p style="color: red; margin-bottom: 15px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                                                <div class="form-group">
                                                                                    <input type="password" class="form-control" id="password" name="password" required />

                                                                                    <label for="password">Password</label>

                                                                                </div>
                                                                                <% if(typeof alert !='undefined' ) {
                                                                                        %>
                                                                                    <% for (var i=0; i <
                                                                                            alert.length; i++) { %>
                                                                                        <% if
                                                                                                (alert[i].param=='password'
                                                                                                ) { %>
                                                                                            <p style="color: red; margin-bottom: 15px;">
                                                                                                <%= alert[i].msg %>
                                                                                            </p>
                                                                                            <% } %>
                                                                                                <% } %>
                                                                                                    <% } %>
                                                                                                        <fieldset style="margin-bottom: 2px;">
                                                                                                            <legend style="margin-bottom: 5px;">
                                                                                                                Choose position
                                                                                                            </legend>
                                                                                                            <div>
                                                                                                                <input type="checkbox" id="editor" name="position" value="editor">
                                                                                                                <label for="editor">Editor</label>
                                                                                                            </div>
                                                                                                            <div>
                                                                                                                <input type="checkbox" id="reviewer" name="position" value="reviewer">
                                                                                                                <label for="reviewer">Reviewer</label>
                                                                                                                <div class="form-group " style="display: none; transition: all 200ms ease-in-out;margin:23px 0px ;">
                                                                                                                    <input type="text" class="form-control" id="work_email" name="work_email" required />
                                                                                                                    <label for="work_email">Email
                                                                                                                            office</label>
                                                                                                                </div>
                                                                                                            </div>
                                                                                                            <div>
                                                                                                                <input type="checkbox" id="author" name="position" value="author">
                                                                                                                <label for="author">Author</label>
                                                                                                                
                                                                                                            </div>
                                                                                                            <% if(typeof alert !='undefined' ) { %>
                                                                                                                <% for (var i=0; i < alert.length; i++) { %>
                                                                                                                    <% if (alert[i].param=='position' ) { %>
                                                                                                                        <p style="color: red; margin-bottom: 15px;">
                                                                                                                            <%= alert[i].msg %>
                                                                                                                        </p>
                                                                                                                        <% } %>
                                                                                                                            <% } %>
                                                                                                                                <% } %>
                                                                                                        </fieldset>
                                                                                                        <% if(typeof alert !='undefined' ) { %>
                                                                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                                                                <% if (alert[i].param=='wrong' ) { %>
                                                                                                                    <p style="color: red; margin-top: 5px;">
                                                                                                                        <%= alert[i].msg %>
                                                                                                                    </p>
                                                                                                                    <% } %>
                                                                                                                        <% } %>
                                                                                                                            <% } %>


                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" required id="address" name="address" />

                                    <label for="address">Address</label>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" required id="email" name="email"/>
                                    <label for="email">Email</label>
                                    
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" id="company" name="company" required />
                                    <label for="company">Company</label>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="job" name="job" required />
                                    <label for="job">Job</label>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="degree" name="degree" required />
                                    <label for="degree">Degree</label>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="profession" name="profession" required />
                                    <label for="profession">Profession</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- <button type="submit" class="btn btn-default">Submit</button> -->
                    <div style="display: flex;justify-content: center;">
                        <button id='sign-up-1' class="btn btn-info me-md-2" style="width: 150px;margin: 0px 20px; background-color: lightseagreen;" type="submit">Create
                                account</button>
                        <a class="btn btn-primary" href="/user/signin" style="width: 150px; text-align: center;margin: 0px 20px;">Go
                                back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>

</html>