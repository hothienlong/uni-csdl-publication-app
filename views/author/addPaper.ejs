                                <div class="container vertical-center-register" style="margin-bottom: 20px;">

                                    <h3 style="margin-bottom: 1em;">Add paper</h3>

                                    <div>
                                        <form action="/views/editor/addPaper" method="POST">
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label for="id">ID:</label>
                                                        <input type="text" class="form-control" id="id" name="id"
                                                            placeholder="Enter id" />
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='id' ) { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="title">Title:</label>
                                                        <input type="text" class="form-control" id="title"
                                                            name="title" placeholder="Enter title" />
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='title' ) { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>
                                                   

                                                    <div class="form-group">
                                                        <label for="date">Date:</label>
                                                        <input type="text" class="form-control" id="date" name="date"
                                                            placeholder="Enter date" />
                                                    </div> 


                                                    <fieldset style="margin-bottom: 2px;">
                                                        <legend style="margin-bottom: 5px;">Choose type of paper</legend>
                                                        <div>
                                                            <input type="radio" id="research_paper" name="type_paper" value="research_paper">
                                                            <label for="research_paper">Research paper</label>
                                                        </div>
                                                        <div>
                                                            <input type="radio" id="book_review" name="type_paper" value="book_review">
                                                            <label for="book_review">Book Review</label>
                                                        </div>
                                                        <div>
                                                            <input type="radio" id="research_overview_paper" name="type_paper" value="research_overview_paper">
                                                            <label for="research_overview_paper">Research overview paper</label>
                                                        </div>                                                        
                                                        <% if(typeof alert != 'undefined') { %>
                                                            <% for (var i = 0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param == 'type_paper') { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg  %>
                                                                    </p>                        
                                                                <% } %>                                            
                                                            <% } %>
                                                        <% } %>
                                                    </fieldset>
                                                    
                                                </div>
                                            
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label for="file">File:</label>
                                                        <input type="text" class="form-control" id="file"
                                                            name="file" placeholder="Enter file" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="pagenums">Page numbers:</label>
                                                        <input type="text" class="form-control" id="pagenums" name="pagenums"
                                                            placeholder="Enter page numbers" />
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='pagenums' ) { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="author">Contact author:</label>                                                        
