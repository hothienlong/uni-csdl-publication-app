                                                            <option value="-1">Please choose a contact author</option>
                                                            <%  authors.forEach(function (au) { %>
                                                                <option value=<%= au.S_ID %>> <%= au.S_ID %> </option>
                                                            <% }) %>                                                                                                                                                                                    
                                                        </select>
                                                    </div>
                                                                                                    
