<body id="page-top">
    <div id="wrapper">

        <!-- Sidebar -->

        <%- include('./sidebar', {"sidebarItem" : "papers"}); %>
            
        <!-- end side bar -->



        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <%- include('../layout/topbar'); %>
                    <div class="container-fluid">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3 d-flex">
                                <div class="container vertical-center-register" style="margin-bottom: 20px;">                    

                                    <!-- Choose type -->
                                    <fieldset style="margin-bottom: 2px;">
                                        <legend style="margin-bottom: 5px;">Choose type of paper</legend>
                                        <div>
                                            <form action="/views/author/addResearchPaper" method="GET">
                                                <input type="radio" onchange="this.form.submit()" id="research_paper" name="type_paper" value="research_paper">
                                                <label for="research_paper">Research paper</label>
                                            </form>

                                        </div>
                                        <div>
                                            <form action="/views/author/addBookReviewPaper" method="GET">
                                                <input type="radio" onchange="this.form.submit()" id="book_review" name="type_paper" value="book_review" checked="checked">
                                                <label for="book_review">Book Review</label>
                                            </form>
                                        </div>
                                        <div>
                                            <form action="/views/author/addResearchOverviewPaper" method="GET">
                                                <input type="radio" onchange="this.form.submit()" id="research_overview_paper" name="type_paper" value="research_overview_paper">
                                                <label for="research_overview_paper">Research overview paper</label>
                                            </form>
                                        </div>                                                        
                                        <% if(typeof alert != 'undefined') { %>
                                            <% for (var i = 0; i < alert.length; i++) { %>
                                                <% if (alert[i].param == 'type_paper') { %>
                                                    <p style="color: red; margin-top: 5px;">
                                                        <%= alert[i].msg  %>
                                                    </p>                        
                                                <% } %>                                            
                                            <% } %>
                                        <% } %>
                                    </fieldset>
                                    <!-- End choose type -->

                                    <!-- Fill in information paper -->
                                    <hr class="sidebar-divider d-none d-md-block">
                                    <h3 style="margin-bottom: 1em;">Fill in inforamation of paper</h3>

                                    <div>
                                        <form action="/views/author/addBookReviewPaper" method="POST">
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label for="id">ID:</label>
                                                        <input type="text" class="form-control" id="id" name="p_id"
                                                            placeholder="Enter id" />
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='id' ) { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="title">Title:</label>
                                                        <input type="text" class="form-control" id="title"
                                                            name="title" placeholder="Enter title" />
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='title' ) { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>
                                                   
                                                    <div class="form-group">
                                                        <label for="file">File:</label>
                                                        <input type="text" class="form-control" id="file"
                                                            name="associated_file" placeholder="Enter file" />
                                                    </div>

                                                    <!-- <div class="form-group">
                                                        <label for="date">Date:</label>
                                                        <input type="text" class="form-control" id="date" name="date"
                                                            placeholder="Enter date" />
                                                    </div>  --> 
                                                    
                                                </div>
                                            
                                                <div class="col-6">

                                                    <div class="form-group">
                                                        <label for="pagenums">Number of pages:</label>
                                                        <input type="text" class="form-control" id="pagenums" name="page_count"
                                                            placeholder="Enter number of pages" />
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='page_count' ) { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="pagenums">Number of authors:</label>
                                                        <input type="text" class="form-control" id="pagenums" name="num_author"
                                                            placeholder="Enter number of authors" />
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="author">Paper authors:</label> <br>                                                     
                                                        <!-- <select name="author" id="author" style="width: 100%">
                                                            <option value="-1">Please choose a contact author</option>
                                                            <%  authors.forEach(function (au) { %>
                                                                <option value=<%= au.S_ID %>> <%= au.S_ID %> </option>
                                                            <% }) %>                                                                                                                                                                                    
                                                        </select><br> -->
                                                        
                                                        <!-- name là input của api, id là CSS-->
                                                        <select name="write_authors_id" id="author" class="selectpicker" multiple>
                                                            <!-- <option value="-1">Please choose paper authors</option> -->
                                                            <%  authors.forEach(function (au) { %>
                                                                <option value=<%= au.S_ID %>> <%= au.S_ID %> </option>
                                                            <% }) %> 
                                                        </select>                                                          
                                                    </div>
                                                                                                    
                                                    <div class="form-group w-100">
                                                        <label for="summary">Summary:</label>
                                                        <textarea type="summary" class="form-control" id="summary"
                                                            name="summary" placeholder="Enter summary" rows="5"></textarea>
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='summary' ) { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>                                                    
                                                </div>
                                                                         
                                            </div>
                                            
                                            <!-- Informatinon of review book -->
                                            <hr class="sidebar-divider d-none d-md-block">
                                            <h3 style="margin-bottom: 1em;">Fill in inforamation of review book</h3>

                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label for="id">ISBN:</label>
                                                        <input type="text" class="form-control" id="id" name="ISBN"
                                                            placeholder="Enter ISBN" />
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='id' ) { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="title">Title:</label>
                                                        <input type="text" class="form-control" id="title"
                                                            name="book_title" placeholder="Enter number of book title" />
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='title' ) { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>
                                                   
                                                    <div class="form-group">
                                                        <label for="pagenums">Number of pages:</label>
                                                        <input type="text" class="form-control" id="pagenums" name="book_page_count"
                                                            placeholder="Enter number of pages" />
                                                        <% if(typeof alert !='undefined' ) { %>
                                                            <% for (var i=0; i < alert.length; i++) { %>
                                                                <% if (alert[i].param=='page_count' ) { %>
                                                                    <p style="color: red; margin-top: 5px;">
                                                                        <%= alert[i].msg %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="file">Publish year:</label>
                                                        <input type="text" class="form-control" id="file"
                                                            name="publish_year" placeholder="Enter publish year" />
                                                    </div>

                                                    <!-- <div class="form-group">
                                                        <label for="date">Date:</label>
                                                        <input type="text" class="form-control" id="date" name="date"
                                                            placeholder="Enter date" />
                                                    </div>  --> 
                                                    
                                                </div>
                                            
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label for="pagenums">Publisher:</label>
                                                        <input type="text" class="form-control" id="pagenums" name="publisher"
                                                            placeholder="Enter publisher" />
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="pagenums">Number of book authors:</label>
                                                        <input type="text" class="form-control" id="pagenums" name="num_book_author"
                                                            placeholder="Enter number of book authors" />
                                                        <br>
                                                        <button class="btn btn-info" id="button-update" data-toggle="modal" data-target="#staticBackdrop">Input book authors's name</button>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="author">Book authors:</label> <br>                                                     
                                                        
                                                        <!-- name là input của api, id là CSS-->
                                                        <select name="book_author_name" id="author" class="selectpicker" multiple>
                                                            <!-- <option value="-1">Please choose paper authors</option> -->
                                                            <%  authors.forEach(function (au) { %>
                                                                <option value=<%= au.S_ID %>> <%= au.S_ID %> </option>
                                                            <% }) %> 
                                                        </select>                                                          
                                                    </div>
                                                                                                                                                 
                                                </div>
                                                                         
                                            </div>
                                            <!-- End fill in information review book -->

                                            <br>
                                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                                <button id='add-paper' class="btn btn-info me-md-2" type="submit" style="margin-right: 5px;">Submit paper</button>
                                                <a class="btn btn-primary" type="button" href="/views/author/paper">Go back</a>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- End fill in information paper -->

                                </div>
                            </div>

                        </div>
                    </div>


                    <footer class="sticky-footer bg-white">
                        <%- include('../layout/footer') %>
                    </footer>
            </div>
        </div>


        <!-- Modal author name -->
        <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title" id="staticBackdropLabel">Update Profile</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/views/author/update_profile" method="POST">
                            <div class="form-group">
                                <label for="exampleInputEmail1">FName:</label>
                                <input type="text" class="form-control" name="fname"  id="update_fname">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Address</label>
                                <input type="text" class="form-control" name="address" id="update_address" >
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email:</label>
                                <input type="email" class="form-control" name="email" id="update_email">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Company:</label>
                                <input type="text" class="form-control" name="company"  id="update_company">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Job:</label>
                                <input type="text" class="form-control" name="job"  id="update_job">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Degree:</label>
                                <input type="text" class="form-control" name="degree"  id="update_degree">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Profession:</label>
                                <input type="text" class="form-control" name="profession"  id="update_profession">
                            </div>
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" id="update-profile">Update</button>
                        </form>
                    </div>
                    <div class="modal-footer">

                    </div>
                </div>
            </div>
        </div>
        <!-- End modal author name -->


        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="login.html">Logout</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>

        <!-- Page level plugins -->
        <script src="vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

        
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

        <script>
            $('#author').select2();
        </script>

