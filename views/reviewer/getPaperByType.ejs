    $("body").on('click', ".btn-edit-criteria", function() {
        let criteria_id = $(this).attr("criteria-id")
        let paper_id = $(this).parent().attr("paper-id")
        let description = $(this).attr("description-criteria")

        // console.log(criteria_id,paper_id,description)


        $(".criteria_id_edit").val(criteria_id)
        $(".paper_id_edit").val(paper_id)
        $("#description_criteria_edit").val(description)

        $.ajax({
            dataType: 'json',
            type: 'post',
            url: './getCriteria',
            data: {
                criteria_id: criteria_id,
                p_id: paper_id
            },
            success: function(data) {
                // console.log(data[0])
                if (data[0].length === 0) {
                    $("#review_content_edit").val('')
                    $("#review_score_edit").val('')
                } else {
                    $("#review_content_edit").val(data[0][0].review_content)
                    $("#review_score_edit").val(data[0][0].review_score)
                }

            }
        })



    })

    $("body").on('click' , ".btn-summary", function() {
        let paper_id = $(this).parent().attr("paper-id")
        $(".paper_id").val(paper_id)


        $.ajax({
            dataType: 'json',
            type: 'post',
            url: './getSummary',
            data: {
                p_id: paper_id
            },
            success: function(data) {
                // console.log(data[0])
