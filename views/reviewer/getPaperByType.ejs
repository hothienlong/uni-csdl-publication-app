    $(".modal").on('click', '#submit-update-criteria' , function() {
        let criteria_id = $("#criteria_update .criteria_id_edit").val()
        let paper_id = $("#criteria_update .paper_id_edit").val()
        let review_content = $("#review_content_edit").val()
        let review_score = $("#review_score_edit").val()

        // console.log(criteria_id,paper_id,review_content,review_score)

        $.ajax({
            dataType: 'json',
            type: 'post',
            url: './getCriteria',
            data: {
                criteria_id: criteria_id,
                p_id: paper_id
            },
            success: function(data) {
                // console.log(data[0])
                if (data[0].length === 0) {
                    $.ajax({
                        dataType: 'json',
                        type: 'post',
                        url: './insertCriteria',
                        data: {
                            criteria_id: criteria_id,
                            p_id: paper_id,
                            review_content: review_content,
                            review_score: review_score
                        },
                        success: function(data) {
                            // console.log(data)
                            if (data.code) {
                                alert("Cannot insert, please edit the review of paper")
                            }
                            $(".modal").modal('hide')
                        }
                    })
                } else {
