<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        <%- include('./sidebar', {active_bar: 'getPaperByTypeInYears'}) %>

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <%- include('../layout/topbar'); %>
                <div class="container-fluid">                
                        
                            
                    <form>   
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="papers">Select type:</label>    
                                    <div class="form-row">
                                        <div class="col">
                                            <select name="typePaper" id="typePaper" style="width: 100%">
