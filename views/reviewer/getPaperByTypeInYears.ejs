<script>
    $(document).ready(function () {
    
        $("body").on("click" , "#selectPaperBtn", function(e) {
            $.ajax({
                dataType: 'json',
                type: 'post',
                url: './getPaperByTypeInYears',
                data: {
                    type_paper: $("#typePaper").val(),
                    years: 3
                },
                success: function(data) {
                    // console.log(data)
                    printTable(data[0])
                }
            })
        })

    });

    const printTable =(data) => {
        rows = ``
        data.map((row) => {
            rows+= `<td>${row['id']}</td>`
            rows+= `<td>${row['title']}</td>`
            rows+= `<td>${row['summary']}</td>`
            rows+= `<td>${row['associated_file']}</td>`
            rows+= `<td>${row['page_count']}</td>`
            rows+= `<td>${row['sent_by']}</td>`
            rows+= `<td>${row['sent_date']}</td>`
            if(row['ISBN']) {
                rows+= `<td>${row['ISBN']}</td>`
            } else {
                rows+= `<td></td>`
            }
            rows+= `<td>${row['status']}</td>`

        })

        $("tbody").html(rows)
    }

</script>




